!!!
/[if IE]
/[if lt IE 7 ] <html lang="en" dir="ltr" class="no-js old_ie ie6">
/[if IE 7 ] <html lang="en" dir="ltr" class="no-js old_ie ie7">
/[if IE 8 ] <html lang="en" dir="ltr" class="no-js ie8">
/[if IE 9 ] <html lang="en" dir="ltr" class="no-js ie9">
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:property => 'og:type', :content => 'website'}

    %title="Pivotal HD | #{@item[:title]}"
    %link{:href => "/stylesheets/print.css", :media => "print", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/styles.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/uv_active4d.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/documentation.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/pygments.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "/js/jquery-1.9.1.min.js", :type => "text/javascript"}
    %script{:src => "/js/documentation.js", :type => "text/javascript"}
  %body
    .header-wrap
      .container.por
        .logo-wrap
          %a.pngfix.logo{:href => "/"}
        .logo-pivotal
          %a{:style => "color: rgba(22, 21, 21, 0.55);"} Pivotal HD
      .header-shadow
    .main-wrap
      .container
        #sub-nav.nav-container
          %ul.menu
            %li.first.expanded.js-maintopic
              %a{:href => "/introduction.html"} Introduction
            %li.first.expanded.active-trail.js-maintopic
              %a.active-trail{:href => "#"} Getting Started
              %ul.menu.js-guides
                %li.first.leaf.js-topic
                  %a{:href => "/getting-started/single-node-cluster.html"} Single Node Cluster
                %li.leaf.js-topic
                  %a{:href => "/getting-started/multi-node-cluster.html"} Multi Node Cluster
                %li.leaf.js-topic
                  %a{:href => "/getting-started/hive/intro.html"} Hive
                  %ul.menu.js-subguides
                    %li.leaf.js-subtopic
                      %a{:href => "/getting-started/hive/installation.html"} Installation
                    %li.leaf.js-subtopic
                      %a{:href => "/getting-started/hive/summerization-pattern.html"} Summerization Pattern
                      %ul.menu.js-inner-subguides
                        %li.leaf.inner-subtopic
                          %a{:href => "/getting-started/hive/tutorial/exercise1.html"} Exercise 1
                        %li.leaf.inner-subtopic
                          %a{:href => "/getting-started/hive/tutorial/exercise2.html"} Exercise 2
                        %li.leaf.inner-subtopic
                          %a{:href => "/getting-started/hive/tutorial/exercise3.html"} Exercise 3
            %li.last.expanded.js-maintopic
              %a{:href => "#"} DeepDive
              %ul.menu.js-guides
                %li.first.leaf.js-topic
                  %a{:href => "/deepdive/intro.html"} Introduction
        .body-container.content
          = yield
    / FOOTER
    .footer-wrap
      .container
        .footer-logo
          %p
            %img{:alt => "Logo Gray", :src => "/images/logo_gray.png"}/
